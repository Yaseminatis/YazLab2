<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<HBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="edu.kou.yazLab2.MainController"
      spacing="10"
      alignment="CENTER"
      prefWidth="1500"
      prefHeight="650">

    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>


    <!-- SOL PANEL -->
    <VBox prefWidth="280" minWidth="280" maxWidth="280" spacing="10">
        <Label text="Dosya İşlemleri" style="-fx-font-weight: bold;"/>
        <HBox spacing="10">
            <Button text="İçe Aktar (JSON)" onAction="#onImportJson"/>
            <Button text="Dışa Aktar (JSON)" onAction="#onExportJson"/>
        </HBox>
        <HBox spacing="10">
            <Button text="İçe Aktar (CSV)" onAction="#onImportCsv"/>
            <Button text="Dışa Aktar (CSV)" onAction="#onExportCsv"/>
        </HBox>

        <Separator/>

        <Label text="Gezinme (BFS / DFS)" style="-fx-font-weight: bold;"/>

        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Başlangıç:"/>
            <ComboBox fx:id="startNodeCombo" prefWidth="140"/>
        </HBox>

        <HBox spacing="10">
            <Button text="BFS Çalıştır" onAction="#onRunBfs" prefWidth="120"/>
            <Button text="DFS Çalıştır" onAction="#onRunDfs" prefWidth="120"/>
        </HBox>

        <TextArea fx:id="traversalArea"
                  prefHeight="120"
                  editable="false"
                  wrapText="true"
                  promptText="BFS / DFS sonucu burada görünecek..."/>

        <Separator/>

        <Label text="Connected Components" style="-fx-font-weight: bold;"/>
        <Button text="Component Bul" onAction="#onFindComponents" prefWidth="250"/>

        <TextArea fx:id="componentsArea"
                  prefHeight="140"
                  editable="false"
                  wrapText="true"
                  promptText="Connected components sonucu burada listelenecek..."/>

        <Separator/>

        <Label text="En Kısa Yol" style="-fx-font-weight: bold;"/>

        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Başlangıç:"/>
            <ComboBox fx:id="pathStartCombo" prefWidth="140"/>
        </HBox>

        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Hedef:"/>
            <ComboBox fx:id="pathTargetCombo" prefWidth="140"/>
        </HBox>

        <HBox spacing="10">
            <Button text="Dijkstra" onAction="#onRunDijkstra" prefWidth="120"/>
            <Button text="A*" onAction="#onRunAStar" prefWidth="120"/>
        </HBox>

        <Label text="Path Çıktısı" style="-fx-font-weight: bold;"/>
        <TextArea fx:id="pathOutputArea" prefHeight="140" editable="false" wrapText="true"/>

        <Separator/>

        <Label text="Node İşlemleri" style="-fx-font-weight: bold;"/>
        <Button text="Seçili Node Sil" onAction="#onDeleteSelected" prefWidth="250"/>
    </VBox>

    <!-- ORTA CANVAS -->
    <Pane fx:id="canvasHost"
          prefWidth="900"
          prefHeight="600"
          HBox.hgrow="ALWAYS"
          style="-fx-border-color: #cccccc; -fx-border-width: 1;"/>
    <!-- SAĞ PANEL -->

    <ScrollPane prefWidth="340" minWidth="340" maxWidth="340"
                fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED">
        <content>
            <VBox spacing="8"
                  style="-fx-padding: 10; -fx-border-color: #dddddd; -fx-border-radius: 4; -fx-background-radius: 4;">

                <Label text="Seçili Node" style="-fx-font-weight: bold;"/>
                <Label fx:id="nodeInfoLabel"
                       text="Yok"
                       wrapText="true"
                       prefWidth="300"
                       minHeight="90"
                       style="-fx-line-spacing: 2;"/>

                <Label text="Aktiflik (0-1)"/>
                <TextField fx:id="aktiflikField" promptText="0.0 - 1.0"/>

                <Label text="Etkileşim"/>
                <TextField fx:id="etkilesimField" promptText="örn: 12"/>

                <Button text="Node Güncelle" onAction="#onUpdateSelectedNode" prefWidth="250"/>

                <Separator/>

                <Label text="Sonuç Paneli" style="-fx-font-weight: bold;"/>
                <ListView fx:id="resultListView" prefHeight="120"/>

                <Separator/>

                <Label text="Degree Centrality Top5" style="-fx-font-weight: bold;"/>
                <TableView fx:id="centralityTable" prefHeight="130">
                    <columns>
                        <TableColumn fx:id="centralityNodeCol" text="Node" prefWidth="120" sortable="false"/>
                        <TableColumn fx:id="centralityDegreeCol" text="Degree" prefWidth="180" sortable="false"/>
                    </columns>
                </TableView>
                <Button text="Top5 Hesapla" onAction="#onShowTop5Centrality" prefWidth="250"/>

                <Separator/>

                <Label text="Welsh–Powell (Node → Color)" style="-fx-font-weight: bold;"/>
                <TableView fx:id="coloringTable" prefHeight="130">
                    <columns>
                        <TableColumn fx:id="colorNodeCol" text="Node" prefWidth="120" sortable="false"/>
                        <TableColumn fx:id="colorCol" text="Color" prefWidth="180" sortable="false"/>
                    </columns>
                </TableView>
                <Button text="Welsh–Powell Çalıştır" onAction="#onRunWelshPowell" prefWidth="250"/>

                <Separator/>

                <Label text="Performans (ms)" style="-fx-font-weight: bold;"/>
                <TableView fx:id="perfTable" prefHeight="160">
                    <columns>
                        <TableColumn fx:id="perfAlgoCol" text="Algoritma" prefWidth="140" sortable="false"/>
                        <TableColumn fx:id="perfMsCol" text="Süre (ms)" prefWidth="120" sortable="false"/>
                    </columns>
                </TableView>
                <Button text="Performans Ölç" onAction="#onRunPerformance" prefWidth="250"/>

                <Separator/>

                <Label text="Log" style="-fx-font-weight: bold;"/>
                <TextArea fx:id="logArea" prefHeight="140" editable="false" wrapText="true"/>

            </VBox>
        </content>
    </ScrollPane>
</HBox>